@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}
@if(!Model.Any()){
    <div class="alert alert-warning mt-5">
      <h4 class="alert-heading">Warning!</h4>
      <p class="mb-0">No Games were added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                        <a class="card text-white bg-dark mb-3 text-decoration-none rounded-3 overflow-hiddin" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                  <div class="card-body" style="background-image: url(@($"{FileSettings.ImagesPath}/{game.Cover}")); background-size: cover; background-position: center; height: 500px;">
                    <div class=" d-flex align-items-end h-100">
                        <span class="badge text-dark bg-light rounded-0 fs-3">@game.Category.Name</span>
                    </div>
                  </div>
                  <div class="card-footer d-flex justify-content-between align-items-center">
                        <h5 class="text-light">@game.Name</h5>
                      <div>
                            @foreach(var gameDevice in game.Devices)
                            {
                                <i class="@gameDevice.Device.Icon me-2 fs-4"></i>
                            }
                    </div>
                  </div>
                </a>
            </div>
        }
    </div>
}